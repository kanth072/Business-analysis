# ---------- Phase 1: Project Planning ----------
"""
Problem:
Identify factors influencing customer churn.

Objective:
Analyze customer behavior and determine key churn drivers.

Success Metrics:
- Churn rate
- Correlation with customer attributes
- Statistically significant factors
"""

# ---------- Phase 2: Data Collection & Preparation ----------
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from scipy import stats
import os

# Load dataset safely
file_path = "/content/customer_churn (1).csv"

if not os.path.exists(file_path):
    raise FileNotFoundError("Dataset not found. Check file name/path.")

df = pd.read_csv(file_path)

# Basic inspection
print(df.head())
print(df.info())

# Handle missing values
df = df.dropna()

# Convert churn column to numeric if needed
if df['Churn'].dtype == 'object':
    df['Churn'] = df['Churn'].map({'Yes': 1, 'No': 0})

# ---------- Phase 3: Exploratory Data Analysis (EDA) ----------

# Churn rate
churn_rate = df['Churn'].mean()
print(f"Churn Rate: {churn_rate:.2%}")

# Distribution of tenure
plt.figure()
plt.hist(df['Tenure'], bins=10)
plt.title("Customer Tenure Distribution")
plt.xlabel("Tenure")
plt.ylabel("Count")
plt.show()

# Correlation heatmap
# Select only numeric columns for correlation calculation
numeric_df = df.select_dtypes(include=[np.number])
corr = numeric_df.corr()

plt.figure()
plt.imshow(corr)
plt.colorbar()
plt.title("Correlation Heatmap")
plt.show()

# ---------- Phase 4: Advanced Statistical Analysis ----------

# Hypothesis Testing: Tenure vs Churn
churned = df[df['Churn'] == 1]['Tenure']
not_churned = df[df['Churn'] == 0]['Tenure']

t_stat, p_value = stats.ttest_ind(churned, not_churned, equal_var=False)

# Confidence Interval for tenure difference
mean_diff = churned.mean() - not_churned.mean()

# ---------- Phase 5: Insights & Recommendations ----------

report = f"""
CUSTOMER CHURN ANALYSIS REPORT

Churn Rate:
{churn_rate:.2%}

Hypothesis Test (Tenure vs Churn):
p-value = {p_value:.4f}

Interpretation:
{'Significant difference in tenure' if p_value < 0.05 else 'No significant difference in tenure'}

Key Insight:
Customers with lower tenure are more likely to churn.

Recommendation:
Improve onboarding and early engagement strategies to reduce churn.
"""

print(report)

# Save outputs
with open("statistical_report.txt", "w") as f:
    f.write(report)

with open("hypothesis_tests_results.txt", "w") as f:
    f.write(f"T-test p-value: {p_value:.4f}")
